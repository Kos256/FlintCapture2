<Window x:Class="FlintCapture2.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlintCapture2"
        mc:Ignorable="d"
        Title="FlintCapture Notification [&lt;id&gt;]" Height="500" Width="350" WindowStyle="None" AllowsTransparency="True" Foreground="White" Background="{x:Null}" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" FontFamily="{DynamicResource ExoRegular}">
    <Grid x:Name="RootGrid">

        <Grid x:Name="MainGrid" Background="#7F000000" Margin="0,100,0,0">
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Screenshot captured!" VerticalAlignment="Top" FontSize="34" FontFamily="{DynamicResource ExoItalic}"/>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Bottom" FontSize="16" Width="324" TextAlignment="Center" Foreground="White" Text="Click here to view and edit the screenshot. You can access a history of your screenshots by tapping the system tray icon." Margin="0,0,0,60"/>
            <Border x:Name="imagePreview" BorderThickness="1" Margin="10,70,10,140"/>
            <Grid x:Name="timerGrid" VerticalAlignment="Bottom" Height="10">
                <Rectangle x:Name="timerRect" Fill="White" Width="350" HorizontalAlignment="Left"/>
            </Grid>
            <Rectangle x:Name="windowClickColliderRect" Fill="Transparent" d:IsHidden="True" Cursor="UpArrow"/>
            <Border x:Name="dismissAllBtn" BorderBrush="#FFFFE500" BorderThickness="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,86,20" Padding="5,2,5,2" Background="#7F000000" Cursor="Hand">
                <TextBlock TextWrapping="Wrap" Text="Dismiss All [n]" Margin="0,-2,0,0" FontSize="16" Foreground="#FFFFE500"/>
            </Border>
            <Border x:Name="dismissBtn" BorderBrush="#FF00B0FF" BorderThickness="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,20" Padding="5,2,5,2" Background="#7F000000" Cursor="Hand">
                <TextBlock TextWrapping="Wrap" Text="Dismiss" Margin="0,-2,0,0" FontSize="16" Foreground="#FF00B0FF"/>
            </Border>

        </Grid>

    </Grid>
</Window>
